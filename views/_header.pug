    //- The nav items that are shown/hidden on mobile
    ul(id="nav-menu"  class="absolute top-20 right-0 bg-white w-96 items-center transition-all duration-300 ease-in-out z-50 flex flex-col  md:flex-row md:static md:w-fit md:space-x-6 hidden md:flex p-4 md:p-0 rounded-lg  md:rounded-none shadow-md md:shadow-none")
      li
        a(href="/overview" class="hover:text-gray-300") Home
      li
        a(href="/fearGreed" class="hover:text-gray-300") Fear & Greed
      li
        a(href="#services" class="hover:text-gray-300") Services
      li
        a(href="#contact" class="hover:text-gray-300") Contact
