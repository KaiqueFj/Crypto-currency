                  .coinMarketValue.flex.flex-col
                    span.font-semibold.text-4xl.text-black=`R$${coin.current_price}`
                    span.changeValue.font-semibold.text-lg.text-gray-400=`${coin.price_change_percentage_24h_in_currency.toFixed(2)}%`

