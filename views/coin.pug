extends base

block append head
  script(defer src="/js/bundled/index.js")

block content
  main.main 
    h1 Coin Overview: #{coin.name}
    .coin-container.max-w.mx-auto.p-6
      .content-container.grid.grid-cols-3.gap-4
        .asideSection.col-span-1.p-6
          .coinStats.flex-flex-row
            .coinHeader
              .coinInfo.flex.items-center.justify-between
                .flex.items-center.gap-2
                  img(src=coin.thumb alt=coin.name)
                  .coinName.flex.flex-row.items-center
                    h2.font-semibold.text-lg.text-gray-700=`${coin.name}`
                    span.font-normal.text-xs.text-gray-400.ml-1=`${coin.symbol.toUpperCase()}`
                .flex.gap-2
                  button
                    i.fa-regular.fa-star
                  button
                    i.fa-solid.fa-link
            .coinBody.flex.flex-col.gap-4
              .coinValue.flex.items-center.justify-between
                .coinMarketValue.flex.flex-col
                  span.font-semibold.text-4xl.text-gray-700=`R$${coin.current_price.brl_formatted}`
                  span.changeValue.font-normal.text-lg.text-gray-400=`${coin.price_change_percentage_24h_in_currency.brl.toFixed(2)}% (1d)`

              .coinMarketCap
                .coinInfo.flex.flex-row.justify-between
                  span.font-semibold.text-sm.text-gray-700=`Market Capitalization`
                  .coinPrice
                    span.changeValue.font-normal.text-xs.text-gray-400=`${coin.price_change_percentage_24h_in_currency.brl.toFixed(2)}%`
                    span.font-semibold.text-sm.text-gray-700.ml-1=`${coin.market_cap.marketCap_formatted.replace(/^(\d)(\d{2})/, '$1,$2').slice(0,4)}T`

                .coinInfoBody.flex.flex-row.items-center
                  .slider.h-1.w-full.bg-gray-300
                  span.font-semibold.text-sm.text-gray-700.ml-1.rounded-md.py-0.px-1.bg-gray-300=`#${coin.market_cap_rank}`

        .mainSection.col-span-1
          .aboutContainer
            h2.text-xl.font-semibold.mt-8.mb-4= `About the ${coin.name}`
            h3.text-xl.font-semibold.mb-4= `What is the ${coin.name}`
            p.text-sm.font-light.mb-4 #{coin.descriptionEn}
          .chartContainer
            h2.text-xl.font-semibold.mt-8.mb-4= `About the ${coin.name}`
            h3.text-xl.font-semibold.mb-4= `What is the ${coin.name}`

        .asideSection.col-span-1
          ul
            li ID: #{coin.id}
            li Symbol: #{coin.symbol}
            li Name: #{coin.name}
            li Description: #{coin.descriptionEn}
