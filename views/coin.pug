                  button.bg-gray-200.rounded-md.py-1.px-2
                    i.icon.fa-regular.fa-star.text-sm
                  button.bg-gray-200.rounded-md.py-1.px-2
                    i.icon.fa-solid.fa-link.text-sm

            .coinInfo.flex.flex-col.gap-4
              .coinBody.flex.flex-col.gap-4
