extends base


block content
  main.mainOverview(class="flex flex-col w-full self-center pt-16 mt-8 ")
  .feedGreedCoin
    .introduction.flex.flex-col.items-center.gradient-bg.p-6.rounded-lg.shadow-md.mb-8.mx-4.gap-2
      h2(class="font-semibold text-4xl md:text-3xl lg:text-4xl text-primary-text-colorS mb-2") Fear & Greed Index
      p(class="font-semibold text-xl md:text-md lg:text-xl text-primary-text-colorS mb-2") Track the emotions driving the market, from extreme fear to extreme greed.
      p(class="font-semibold text-xl md:text-md lg:text-xl text-primary-text-colorS mb-2")=`The current Fear & Greed Index stands at ${fearGreedValue[0].value}, classified as "${fearGreedValue[0].classification}". Yesterday's value was ${fearGreedValue[1].value}, and last week's value was ${fearGreedValue[6].value}.`
      p(class="mt-4 px-4 py-2 bg-background text-fourth-text-color font-bold rounded-lg shadow-md hover:bg-hover-text-color hover:text-primary-text-colorS transition-colors duration-300 ease-in-out cursor-pointer") Explore the market sentiment below

    div(class="bg-background shadow-md border-2 border-primary-text-color rounded-lg p-6 max-w-xl mx-auto mt-8")
      // Header Section
      div(class="flex justify-between items-center mb-6")
        h2(class="font-semibold text-secondary text-xl") Crypto Fear and Greed Indicator
        p(class="text-secondary text-sm")= `Last updated: ${fearGreedValue[0].timestamp}`
      // Body Section

      .fearGreed.flex
        // Left Side: Fear and Greed Indicator SVG
        div(class="w-1/2 flex flex-col items-center justify-center bg-transparent")
          svg(width="300" height="200" viewBox="0 0 300 250" xmlns="http://www.w3.org/2000/svg")
            // Group for the doughnut chart, centered at the middle
            g(transform="translate(150, 150)")
              // Arc segments
              g.arc
                // Red segment
                path(d="M-107.94971126755703,-3.2954267175996574A108,108,0,0,1,-78.66219144333746,-74.00175428550142L-55.736679624136755,-51.07624246630069A75.6,75.6,0,0,0,-75.5281415284987,-3.2954267175996588Z" fill="#f02934")
                // Orange segment
                path(d="M-74.00175428550139,-78.66219144333748A108,108,0,0,1,-3.2954267175996614,-107.94971126755703L-3.295426717599662,-75.5281415284987A75.6,75.6,0,0,0,-51.07624246630068,-55.73667962413676Z" fill="#f07d29")
                // Green segment
                path(d="M3.295426717599675,-107.94971126755703A108,108,0,0,1,74.00175428550139,-78.66219144333749L51.07624246630068,-55.73667962413677A75.6,75.6,0,0,0,3.295426717599671,-75.5281415284987Z" fill="#9acd7a")
                // Dark Green segment
                path(d="M78.66219144333749,-74.00175428550138A108,108,0,0,1,107.94971126755703,-3.295426717599666L75.5281415284987,-3.2954267175996654A75.6,75.6,0,0,0,55.73667962413677,-51.07624246630066Z" fill="#34b349")

              // Needle
              g.speedometer-needle
                path#needle-path(d="M -3.5 0 L 0 -90 L 3.5 0 Z" fill="#000")
                circle(cx="0" cy="-4.05" r="8.1" fill="#464a4f")

            // Right Side: Fear Values
        div(class="w-1/2 flex flex-col items-start justify-center")
          div(class="mb-2")
            span(class="font-semibold text-lg text-secondary") Now:
            span(class="fear-greed-value text-primary-text-color font-bold ml-2 " data-value=`${fearGreedValue[0].value}`)=`${fearGreedValue[0].value} ${fearGreedValue[0].classification}`
          div(class="mb-2")
            span(class="font-semibold text-lg text-secondary") Yesterday:
            span(class="text-primary-text-color font-bold ml-2")=`${fearGreedValue[1].value} ${fearGreedValue[1].classification}`
          div(class="mb-2")
            span(class="font-semibold text-lg text-secondary") Last Week:
            span(class="text-primary-text-color font-bold ml-2")=`${fearGreedValue[6].value} ${fearGreedValue[6].classification}`