extends base

block content
  div(class="flex flex-col w-full items-center pt-16 mt-8 mb-auto  sm:pt-12 sm:mt-12")
    div(class="bg-primary p-8 rounded-lg shadow-md w-full max-w-md sm:max-w-sm lg:max-w-lg")
      h2(class="text-2xl text-primary-text-color font-bold mb-6 text-center") Login
      form(class="userSignIn")
        div(class="mb-4")
          label(for="email" class="block text-primary-text-color") Email
          input.inputEmail(type="email" name="email" id="email" required 
            class="mt-1 block w-full px-4 py-2 border border-third-text-color rounded-md focus:outline-none focus:ring-2 focus:ring-fourth-text-color")
        div(class="mb-4")
          label(for="password" class="block text-primary-text-color") Password
          input.inputPassword(type="password" name="password" id="password" required 
            class="mt-1 block w-full px-4 py-2 border border-third-text-color rounded-md focus:outline-none focus:ring-2 focus:ring-fourth-text-color")
        button(type="submit" class="w-full py-2 px-4 bg-background-seventh hover:bg-hover-text-color text-primary rounded-md mt-4") Log In
      p(class="text-center text-sm text-primary-text-color mt-4")
        | Don't have an account? 
        a(href="/signUp" class="text-fourth-text-color hover:underline") Sign up
